<Window x:Class="SchoolProject.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject"
        mc:Ignorable="d"
        Title="Window3" Height="200" Width="390" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF282729">
        <Label Content="Введите название для вашего сайта:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="35" Width="327" Foreground="#FFC03748" FontSize="18" BorderBrush="#FFC03748"/>
        <TextBox x:Name="nameofws" TextAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="304" Height="45" FontFamily="Microsoft YaHei UI Light" FontSize="18" Background="{x:Null}" Foreground="White" TextChanged="nameofws_TextChanged"/>
        <Button Content="Продолжить" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top" Height="28" Width="102" Background="{x:Null}" BorderBrush="#FFC03748" Foreground="#FFB2AFAF" Click="Button_Click"/>
    </Grid>
</Window>
